{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "epic": {
      "type": "string"
    },
    "feature": {
      "type": "string"
    },
    "context": {
      "type": "object",
      "properties": {
        "phase": {
          "type": "number"
        },
        "spec_refs": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "notes": {
          "type": "string"
        }
      }
    },
    "defaults": {
      "type": "object",
      "properties": {
        "status": {
          "type": "string"
        },
        "priority": {
          "type": "string"
        },
        "owner": {
          "type": "string"
        },
        "envs": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "tasks": {
      "type": "array",
      "items": {
        "type": "object"
      }
    }
  },
  "required": ["epic", "feature", "tasks"]
}

